<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/queryId"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@color/white" >

    <include
        android:id="@+id/include1"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_size"
        android:layout_alignParentTop="true"
        layout="@layout/title_themes" />

    <RadioGroup
        android:id="@+id/recordGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include1"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/record_native"
            android:layout_marginRight="10dp"
            android:checked="true"
            android:text="@string/local_record" />

        <RadioButton
            android:id="@+id/record_remote"
            android:checked="false"
            android:text="@string/remote_record" />
    </RadioGroup>

    <TableLayout
        android:id="@+id/remoteLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recordGroup"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="@string/devList" />

            <Spinner
                android:id="@+id/queryDevList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dev_list_button"
                android:gravity="center" />
        </LinearLayout>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="@string/devChnNumber" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="@string/recordType" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:gravity="center" >

            <Spinner
                android:id="@+id/queryDevChnCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/dev_list_button"
                android:gravity="center" />

            <Spinner
                android:id="@+id/queryRecordType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/dev_list_button"
                android:gravity="center" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remoteLayout"
        android:layout_marginTop="20dp" 
        android:gravity="center">

        <TableRow android:gravity="center">

            <TextView
                android:id="@+id/queryDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:gravity="right"
                android:text="@string/query_date"
                android:textColor="@color/font_color" />

            <Button
                android:id="@+id/queryDate"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:background="@drawable/dev_list_button"
                android:onClick="showStartDatePicker"
                android:text="@string/choice_time"
                android:textColor="@color/font_color" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" 
            android:gravity="center">

            <TextView
                android:id="@+id/start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:gravity="right"
                android:text="@string/start_time"
                android:textColor="@color/font_color" />

            <Button
                android:id="@+id/start_time"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/dev_list_button"
                android:onClick="showStartTimePicker"
                android:text="@string/choice_time"
                android:textColor="@color/font_color" />
        </TableRow>

        <TableRow
            android:id="@+id/endLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center" >

            <TextView
                android:id="@+id/end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:gravity="right"
                android:text="@string/end_time"
                android:textColor="@color/font_color" />

            <Button
                android:id="@+id/end_time"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/dev_list_button"
                android:onClick="showEndTimePicker"
                android:text="@string/choice_time"
                android:textColor="@color/font_color" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout"
        android:layout_marginTop="20dp"
        android:gravity="center" >

        <Button
            android:id="@+id/time_query"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_click"
            android:onClick="queryRecord"
            android:text="@string/query"
            android:textColor="@color/font_color" />

        <Button
            android:id="@+id/time_cancel"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_click"
            android:onClick="cancelQuery"
            android:text="@string/cancel"
            android:textColor="@color/font_color" />
    </LinearLayout>

</RelativeLayout>